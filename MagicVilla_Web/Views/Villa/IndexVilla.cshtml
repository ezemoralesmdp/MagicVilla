@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDto>

@{
    ViewData["Title"] = "IndexVilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>IndexVilla</h1> 

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-priamry">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>&nbsp;Create NEW Villa</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupants</th>
                <th>Fee</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupants</td>
                    <td>@((item.Fee).ToString("c"))</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i>&nbsp;</a>
                        <a asp-controller="Villa" asp-action="RemoveVilla" asp-route-villaId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i>&nbsp;</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
